---
import { Picture } from 'astro-imagetools/components'

export interface Props {
  src: string
  alt: string
}

const { src, alt = '' } = Astro.props as Props
---

<div class="max-w-xl">
  <figure>
    <Picture
      src={src}
      alt={alt}
      attributes={{
        img: {
          class: 'rounded-lg shadow-lg',
        },
      }}
    />
    <figcaption>
      <slot />
    </figcaption>
  </figure>
</div>
